{
  "name": "swissjs-monorepo",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/plugins/*",
    "packages/devtools/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test --",
    "test:watch": "turbo run test:watch --",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean --parallel && npm run clean:dist && rm -rf node_modules",
    "clean:dist": "find packages apps -name dist -type d -exec rm -rf {} + 2>/dev/null || true",
    "link": "turbo run build && find packages -name package.json -not -path '*/node_modules/*' -execdir npm link \\;",
    "unlink": "find packages -name package.json -not -path '*/node_modules/*' -execdir npm unlink \\;",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "precommit:staged": "lint-staged",
    "precommit:docs-sync": "node scripts/verify-docs-sync.mjs",
    "prepush:checks": "pnpm -w lint && pnpm -w type-check && pnpm -w check:barrels && pnpm check:policy && pnpm -w check:ui-format && CI=1 pnpm -w test",
    "check:licensing": "node scripts/verify-licensing.mjs",
    "changeset": "changeset",
    "release:version": "changeset version",
    "release:publish": "changeset publish",
    "mdlint": "markdownlint-cli2",
    "check:barrels": "node scripts/check-barrels.mjs",
    "check:ui-format": "node scripts/check-ui-format.mjs",
    "check:policy": "node scripts/check-deep-imports.mjs && node scripts/check-public-barrels.mjs && node scripts/promotion-filter.mjs",
    "check:promotion": "node scripts/promotion-filter.mjs",
    "check:barrels:report": "node scripts/check-barrels.mjs --report",
    "docs:api": "npm --prefix tools/docs-runner install --no-audit --no-fund && node tools/docs-runner/generate.mjs",
    "api:build": "pnpm docs:api && node scripts/api-report-build.mjs",
    "api:check": "pnpm api:build && node scripts/api-report-check.mjs",
    "docs:api:typedoc": "turbo run docs:api",
    "docs:api:index": "node tools/docs-runner/ensure-api-index.mjs",
    "docs:clean": "rm -rf docs/api && mkdir -p docs/api",
    "docs:clean:generated": "rm -rf docs/api docs/.vitepress/dist && mkdir -p docs/api",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:check": "turbo run docs:api",
    "docs": "pnpm docs:api:typedoc && pnpm docs:build",
    "docs:rebuild": "pnpm docs:clean:generated && pnpm docs:api:typedoc && pnpm docs:build",
    "docs:tsdoc-coverage": "node tools/docs-tsdoc-coverage.mjs",
    "metrics:loc": "node scripts/loc-report.mjs",
    "metrics:loc:ci": "node scripts/loc-report.mjs",
    "docs:tasks": "node tools/docs-generate-content-tasks.mjs",
    "check:src-artifacts": "node scripts/check-src-artifacts.mjs",
    "check:tsconfig-outdir": "node scripts/check-tsconfig-outdir.mjs",
    "reset": "pnpm clean && pnpm install --frozen-lockfile && pnpm lint && pnpm type-check && pnpm check:tsconfig-outdir && pnpm check:src-artifacts && pnpm check:policy && pnpm -w check:ui-format && CI=1 pnpm -w -r --if-present test && pnpm build && pnpm check:src-artifacts && pnpm docs:clean:generated && pnpm docs:api && pnpm docs:api:index && pnpm -w check:barrels && pnpm api:build && npx --yes markdownlint-cli2 \"**/*.md\" \"!docs/api/**\" \"!**/node_modules/**\" \"!**/dist/**\" \"!docs/.vitepress/dist/**\" && pnpm docs:tsdoc-coverage && pnpm docs:build",
    "lint:sast": "eslint -c .eslintrc.sast.cjs --max-warnings=0 ."
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@eslint/js": "^9.30.1",
    "@types/bun": "^1.2.19",
    "@types/chalk": "^2.2.4",
    "@types/commander": "^2.12.5",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/fs-extra": "^9.0.13",
    "@types/helmet": "^4.0.0",
    "@types/inquirer": "^8.2.11",
    "@types/node": "18.19.121",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vscode/vsce": "^3.6.0",
    "c8": "^10.1.3",
    "chalk": "^5.4.1",
    "chokidar": "^3.6.0",
    "eslint": "^9.31.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^2.0.3",
    "eslint-plugin-vitest": "^0.5.4",
    "file-router": "link:@swissjs/plugins/file-router",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "markdownlint-cli2": "^0.15.0",
    "pnpm": "^8.0.0",
    "prettier": "^3.6.2",
    "rollup": "^4.45.1",
    "ts-node": "^10.9.2",
    "turbo": "^2.5.4",
    "typedoc": "^0.28.7",
    "typedoc-plugin-markdown": "^4.2.4",
    "typescript": "5.8.2",
    "vite": "^5.4.19",
    "vitepress": "^1.6.4",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "@types/node": "18.19.121"
    }
  },
  "engines": {
    "node": ">=18.19.0 <19"
  },
  "packageManager": "pnpm@10.12.4+sha512.5ea8b0deed94ed68691c9bad4c955492705c5eeb8a87ef86bc62c74a26b037b08ff9570f108b2e4dbd1dd1a9186fea925e527f141c648e85af45631074680184",
  "keywords": [
    "swissjs",
    "framework"
  ],
  "dependencies": {
    "@swissjs/compiler": "workspace:*",
    "@swissjs/utils": "workspace:*",
    "@swissjs/vite-plugin-swiss": "workspace:*",
    "commander": "^14.0.0",
    "express": "^5.1.0",
    "fs-extra": "^11.3.0",
    "reflect-metadata": "^0.2.2",
    "typescript-eslint": "^8.37.0"
  },
  "license": "MIT",
  "author": {
    "name": "Themba Mzumara",
    "email": "themba@swissjs.dev",
    "url": "https://github.com/ThembaMzumara"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ThembaMzumara/SWISS.git"
  },
  "homepage": "https://github.com/ThembaMzumara/SWISS#readme",
  "bugs": {
    "url": "https://github.com/ThembaMzumara/SWISS/issues"
  }
}
