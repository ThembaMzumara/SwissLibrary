{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "types": ["node", "bun"],
    "lib": ["ESNext"],
    "module": "Node16",
    "composite": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "noEmitOnError": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.d.ts",
    "**/*.d.ts.map"
  ]
}
