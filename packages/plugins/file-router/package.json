{
  "name": "@swissjs/plugin-file-router",
  "version": "1.0.0",
  "description": "File-based routing plugin for SwissJS",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "dependencies": {
    "@swissjs/core": "workspace:*"
  },
  "peerDependencies": {
    "vite": "^5.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.2.0",
    "pnpm": "^10.14.0",
    "typescript": "5.8.2",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc -b --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "clean": "rm -rf dist node_modules && rm -f tsconfig.tsbuildinfo",
    "lint": "eslint src --ext .ts,.tsx",
    "docs:api": "typedoc"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "default": "./dist/core/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    },
    "./dev": {
      "types": "./dist/dev/index.d.ts",
      "default": "./dist/dev/index.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "license": "MIT",
  "author": {
    "name": "Themba Mzumara",
    "email": "themba@swissjs.dev",
    "url": "https://github.com/ThembaMzumara"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ThembaMzumara/SWISS.git"
  },
  "homepage": "https://github.com/ThembaMzumara/SWISS#readme",
  "bugs": {
    "url": "https://github.com/ThembaMzumara/SWISS/issues"
  },
  "keywords": [
    "swissjs",
    "framework"
  ]
}
