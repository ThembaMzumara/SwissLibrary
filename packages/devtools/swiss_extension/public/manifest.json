{
  "manifest_version": 3,
  "name": "SwissJS DevTools: Fenestration",
  "version": "0.1.0",
  "minimum_chrome_version": "114",
  "description": "SwissJS devtools panel to inspect plugins, capabilities, and runtime state.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "devtools_page": "devtools.html",
  "action": {
    "default_title": "SwissJS DevTools"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
