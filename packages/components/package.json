{
  "name": "@swissjs/components",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/index.ui",
  "files": [
    "src"
  ],
  "scripts": {
    "build": "pnpm compile:ui && echo 'Components built'",
    "compile:ui": "node --input-type=module -e \"import { compileUiFilesToTypeScript } from '@swissjs/cli/dist/utils/compileUiFiles.js'; await compileUiFilesToTypeScript('./src', './dist', true);\"",
    "postcompile:ui": "node -e \"require('fs').writeFileSync('dist/index.js', 'export * from \\\"./index.ts\\\";\\n')\"",
    "pretest": "pnpm compile:ui",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts,.tsx,.ui",
    "pretype-check": "pnpm compile:ui",
    "type-check": "tsc -p tsconfig.typecheck.json"
  },
  "dependencies": {
    "@swissjs/core": "workspace:*"
  },
  "devDependencies": {
    "@swissjs/cli": "workspace:*",
    "@swissjs/compiler": "workspace:*",
    "axe-core": "^4.9.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/user-event": "^14.5.2",
    "jsdom": "^25.0.1",
    "vitest": "^3.2.4"
  },
  "license": "MIT",
  "author": {
    "name": "Themba Mzumara",
    "email": "themba@swissjs.dev",
    "url": "https://github.com/ThembaMzumara"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ThembaMzumara/SWISS.git"
  },
  "homepage": "https://github.com/ThembaMzumara/SWISS#readme",
  "bugs": {
    "url": "https://github.com/ThembaMzumara/SWISS/issues"
  },
  "keywords": [
    "swissjs",
    "framework"
  ]
}
